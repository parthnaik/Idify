<form name='new_idea' method='post' action='/ideas'>
	<input name='cat_id' type='hidden' value='<%= params[:id] %>'>
	<input name='new_idea[title]' type='text' placeholder='Title'><br><br>
	<textarea rows='5' cols='40' name='new_idea[description]' placeholder='Description'></textarea><br><br>
	<input name='image[url1]' type='text' placeholder='Image URL 1'><br><br>
	<input name='image[url2]' type='text' placeholder='Image URL 2'><br><br>
	<input type='submit' value='Submit'>
</form>